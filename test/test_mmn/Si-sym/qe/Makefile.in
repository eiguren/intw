
QE_BUILD_DIR=@QE_BUILD_DIR@
QE2INTW_BUILD_DIR=@QE2INTW_BUILD_DIR@
W_BUILD_DIR=@W_BUILD_DIR@
INTW_BUILD_DIR=@CMAKE_BINARY_DIR@

#MPI_CMD=@MPI_CMD@

all: pw_files w90pp_files pw2intw_files intw_files w90_files

calculation: pw_files w90pp_files run_pw2intw run_intw run_w90


.PHONY: all calculation clean run_pw run_w90pp run_pw2intw run_intw run_w90 pw_files pw2intw_files intw_files w90_files

run_pw:
	$(MPI_CMD) $(QE_BUILD_DIR)/bin/pw.x < si.scf.in | tee si.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_w90pp:
	$(MPI_CMD) $(W_BUILD_DIR)/wannier90.x -pp si

run_pw2intw:
	rm -rf si.save.intw
	$(QE2INTW_BUILD_DIR)/pw2intw.x < pw2intw.in | tee pw2intw.out
	( test -f CRASH && exit 1 || echo "OK" )

run_intw:
	rm -rf si.mmn
	$(INTW_BUILD_DIR)/src/utilities/intw2W90.x < intw.in | tee intw.out
	( test -f CRASH && exit 1 || echo "OK" )

run_w90:
	rm -rf si.wout
	$(MPI_CMD) $(W_BUILD_DIR)/wannier90.x si


PW_FILES = si.scf.out si.save/data-file-schema.xml si.save/charge-density.dat
W90PP_FILES = si.nnkp
PW2INTW_FILES = pw2intw.out si.save.intw/crystal.dat si.save.intw/wfc00001.dat si.save.intw/iGlist.dat si.save.intw/1-KBPP.txt si.save.intw/kpoints.dat si.save.intw/gvectors.dat
INTW_FILES = si.mmn si.amn si.eig
W90_FILES = si.wout

pw_files: $(PW_FILES)
w90pp_files: $(W90PP_FILES)
pw2intw_files: $(PW2INTW_FILES)
intw_files: $(INTW_FILES)
w90_files: $(W90_FILES)

si.scf.out:
	make run_pw
si.save/data-file-schema.xml:
	make run_pw
si.save/charge-density.dat:
	make run_pw

si.nnkp: $(PW_FILES)
	make run_w90pp

pw2intw.out: $(W90PP_FILES)
	make run_pw2intw
si.save.intw/crystal.dat: $(W90PP_FILES)
	make run_pw2intw
si.save.intw/wfc00001.dat: $(W90PP_FILES)
	make run_pw2intw
si.save.intw/iGlist.dat: $(W90PP_FILES)
	make run_pw2intw
si.save.intw/1-KBPP.txt: $(W90PP_FILES)
	make run_pw2intw
si.save.intw/kpoints.dat: $(W90PP_FILES)
	make run_pw2intw
si.save.intw/gvectors.dat: $(W90PP_FILES)
	make run_pw2intw

si.mmn: $(PW2INTW_FILES)
	make run_intw
si.amn: $(PW2INTW_FILES)
	make run_intw
si.eig: $(PW2INTW_FILES)
	make run_intw

si.wout: $(INTW_FILES)
	make run_w90


clean:
	rm -rf si.scf.out si.xml si.wfc* si.save
	rm -rf pw2intw.out si.save.intw
	rm -rf intw.out si.mmn si.amn si.eig nnkp.test
	rm -rf si.wout si_band.* si.chk si.nnkp
