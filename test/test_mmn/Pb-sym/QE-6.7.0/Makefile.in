
QE_HOME=@QE_HOME@
W_HOME=@W_HOME@
QE_VERSION=$(shell basename ${PWD} | sed 's/QE-//')

#MPI_CMD=@MPI_CMD@

all: pw_files w90pp_files pw2intw_files intw_files w90_files

calculation: all


.PHONY: all calculation clean run_pw run_w90pp run_pw2intw run_intw run_w90 pw_files pw2intw_files intw_files w90_files pb.mmn

run_pw:
	$(MPI_CMD) $(QE_HOME)/build/bin/pw.x < pb.scf.in | tee pb.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_w90pp:
	$(MPI_CMD) $(W_HOME)/wannier90.x -pp pb

run_pw2intw:
	../../../../build/src/QEtoINTW/$(QE_VERSION)/pw2intw.x < pw2intw.in | tee pw2intw.out
	( test -f CRASH && exit 1 || echo "OK" )

run_intw:
	../../../../build/src/utilities/intw2W90.x < intw.in | tee intw.out
	( test -f CRASH && exit 1 || echo "OK" )

run_w90:
	$(MPI_CMD) $(W_HOME)/wannier90.x pb


PW_FILES = pb.scf.out pb.save/data-file-schema.xml pb.save/charge-density.dat
W90PP_FILES = pb.nnkp
PW2INTW_FILES = pw2intw.out pb.save.intw/crystal.dat pb.save.intw/wfc00001.dat pb.save.intw/iGlist.dat pb.save.intw/1-KBPP.txt pb.save.intw/kpoints.dat pb.save.intw/gvectors.dat
INTW_FILES = pb.mmn pb.amn pb.eig
W90_FILES = pb.wout
pw_files: $(PW_FILES)
w90pp_files: $(W90PP_FILES)
pw2intw_files: $(PW2INTW_FILES)
intw_files: $(INTW_FILES)
w90_files: $(W90_FILES)

pb.scf.out:
	make run_pw
pb.nscf.out:
	make run_pw
pb.save/data-file-schema.xml:
	make run_pw
pb.save/charge-density.dat:
	make run_pw

pb.nnkp: $(PW_FILES)
	make run_w90pp

pw2intw.out: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/crystal.dat: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/wfc00001.dat: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/iGlist.dat: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/1-KBPP.txt: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/pb.dvscf_q1: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/kpoints.dat: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/pb.dyn_q1: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/gvectors.dat: $(W90PP_FILES)
	make run_pw2intw
pb.save.intw/irrq_patterns.dat: $(W90PP_FILES)
	make run_pw2intw

pb.mmn: $(PW2INTW_FILES)
	make run_intw
pb.amn: $(PW2INTW_FILES)
	make run_intw
pb.eig: $(PW2INTW_FILES)
	make run_intw

pb.wout: $(INTW_FILES)
	make run_w90

clean:
	rm -rf pb.scf.out pb.xml pb.wfc* pb.save
	rm -rf pw2intw.out pb.save.intw
	rm -rf intw.out nnkp.test pb.nnkp pb.mmn pb.amn pb.eig
	rm -rf pb.wout pb_band.* pb.chk
