
QE_HOME=@QE_BUILD_DIR@
QE_VERSION=$(shell basename ${PWD} | sed 's/QE-//')
BUILD_DIR=@CMAKE_BINARY_DIR@

#MPI_CMD=@MPI_CMD@

all: 

calculation: all


.PHONY: all calculation clean run_scf run_ph run_q2r scf_files ph_files q2r_files


run_scf:
	$(MPI_CMD) $(QE_HOME)/bin/pw.x < fe-o.scf.in | tee fe-o.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_ph:
	cp -r fe-o.save qq1/
	( cd qq1 ; $(MPI_CMD) $(QE_HOME)/bin/ph.x < fe-o.ph.in | tee fe-o.ph.out ; rm -rf fe-o.save ; test -f CRASH && exit 1 || echo "OK" )

run_q2r:
	rm -rf CRASH
	cp qq1/fe-o.dyn ./fe-o.dyn1
	$(QE_HOME)/bin/q2r.x < q2r.in | tee q2r.out
	( test -f CRASH && exit 1 || echo "OK" )


SCF_FILES = fe-o.scf.out fe-o.save/data-file-schema.xml fe-o.save/charge-density.dat fe-o.save/wfc1.dat
PH_FILES = qq1/fe-o.ph.out qq1/fe-o.dyn qq1/_ph0/fe-o.dvscf1 qq1/_ph0/fe-o.phsave/patterns.1.xml
Q2R_FILES = q2r.out fe-o.fc


scf_files: $(SCF_FILES)
ph_files: $(PH_FILES)
q2r_files: $(Q2R_FILES)


fe-o.scf.out: fe-o.scf.in
	make run_scf
fe-o.save/data-file-schema.xml: fe-o.scf.in
	make run_scf
fe-o.save/charge-density.dat: fe-o.scf.in
	make run_scf
fe-o.save/wfc1.dat:
	make run_scf

qq1/fe-o.ph.out: qq1/fe-o.ph.in $(SCF_FILES)
	make run_ph
qq1/fe-o.dyn: qq1/fe-o.ph.in $(SCF_FILES)
	make run_ph
qq1/_ph0/fe-o.dvscf1: qq1/fe-o.ph.in $(SCF_FILES)
	make run_ph
qq1/_ph0/fe-o.phsave/patterns.1.xml: qq1/fe-o.ph.in $(SCF_FILES)
	make run_ph

q2r.out: q2r.in $(PH_FILES)
	make run_q2r
fe-o.fc: q2r.in $(PH_FILES)
	make run_q2r


clean:
	rm -rf $(SCF_FILES) $(PH_FILES) $(Q2R_FILES)
