
QE_HOME=@QE_HOME@
QE_VERSION=$(shell basename ${PWD} | sed 's/QE-//')

#MPI_CMD=@MPI_CMD@

all: pw2intw_files

calculation: all


.PHONY: all calculation clean run_pw run_ph run_q2r run_pw2intw pw_files ph_files q2r_files pw2intw_files

run_pw:
	$(MPI_CMD) $(QE_HOME)/build/bin/pw.x < gaas.scf.in | tee gaas.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_ph:
	cp -r gaas.save qq1/
	( cd qq1 ; $(MPI_CMD) $(QE_HOME)/build/bin/ph.x < gaas.ph.in | tee gaas.ph.out ; rm -rf gaas.save ; test -f CRASH && exit 1 || echo "OK" )

run_q2r:
	rm -rf CRASH
	cp qq1/gaas.dyn ./gaas.dyn1
	$(QE_HOME)/build/bin/q2r.x < q2r.in | tee q2r.out
	( test -f CRASH && exit 1 || echo "OK" )


run_pw2intw:
	../../../../build/src/QEtoINTW/$(QE_VERSION)/pw2intw.x < pw2intw.in | tee pw2intw.out
	( test -f CRASH && exit 1 || echo "OK" )


PW_FILES = gaas.scf.out gaas.save/data-file-schema.xml gaas.save/charge-density.dat
PH_FILES = qq1/gaas.ph.out qq1/gaas.dyn qq1/_ph0/gaas.dvscf1 qq1/_ph0/gaas.phsave/patterns.1.xml
Q2R_FILES = q2r.out gaas.fc
PW2INTW_FILES = pw2intw.out gaas.save.intw/crystal.dat gaas.save.intw/wfc00001.dat gaas.save.intw/iGlist.dat gaas.save.intw/1-KBPP.txt gaas.save.intw/gaas.dvscf_q1 gaas.save.intw/kpoints.dat gaas.save.intw/gaas.dyn_q1 gaas.save.intw/gvectors.dat gaas.save.intw/irrq_patterns.dat


pw_files: $(PW_FILES)
ph_files: $(PH_FILES)
q2r_files: $(Q2R_FILES)
pw2intw_files: $(PW2INTW_FILES)

gaas.scf.out:
	make run_pw
gaas.save/data-file-schema.xml:
	make run_pw
gaas.save/charge-density.dat:
	make run_pw

qq1/gaas.ph.out: $(PW_FILES)
	make run_ph
qq1/gaas.dyn: $(PW_FILES)
	make run_ph
qq1/_ph0/gaas.dvscf1: $(PW_FILES)
	make run_ph
qq1/_ph0/gaas.phsave/patterns.1.xml: $(PW_FILES)
	make run_ph

q2r.out: $(PH_FILES)
	make run_q2r
si.fc: $(PH_FILES)
	make run_q2r

pw2intw.out: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/crystal.dat: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/wfc00001.dat: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/iGlist.dat: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/1-KBPP.txt: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/gaas.dvscf_q1: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/kpoints.dat: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/gaas.dyn_q1: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/gvectors.dat: $(Q2R_FILES)
	make run_pw2intw
gaas.save.intw/irrq_patterns.dat: $(Q2R_FILES)
	make run_pw2intw


clean:
	rm -rf si.scf.out si.xml si.wfc* si.save
	rm -rf qq1/si.dyn qq1/si.ph.out qq1/si.wfc* qq1/_ph0 qq1/si.save
	rm -rf q2r.out si.fc si.dyn1
	rm -rf pw2intw.out si.save.intw
	rm -rf intw.out ep_mat.dat_1
