#!/usr/bin/env bash

QE_HOME=@QE_HOME@
QE_VERSION=$(basename $PWD | sed 's/QE-//')

# Run all necessary QE calculations
make calculation
if [ $? -ne 0 ]; then
  exit 1
fi


# Run the matrix-element calculation
cp ../intw.in ./
../../../../build/src/utilities/ep_melements_noW.x < intw.in | tee intw.out



# Compare calculation
python3 compare_matrix_elements_1.py
if [ $? -ne 0 ]; then
  exit 1
fi
python3 compare_matrix_elements_2.py
if [ $? -ne 0 ]; then
  exit 1
fi
python3 compare_matrix_elements_3.py
if [ $? -ne 0 ]; then
  exit 1
fi
