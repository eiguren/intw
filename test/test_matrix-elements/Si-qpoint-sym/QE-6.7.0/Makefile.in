
QE_BUILD_DIR=@QE_BUILD_DIR@

#MPI_CMD=@MPI_CMD@


all: scf_files ph_files q2r_files nscf_files nscf_pw2intw_files

calculation: all


.PHONY: all calculation clean run_scf run_ph run_q2r run_nscf run_nscf_pw2intw scf_files ph_files q2r_files nscf_files nscf_pw2intw_files


run_scf:
	$(QE_BUILD_DIR)/bin/pw.x < si.scf.in | tee si.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_ph1:
	cp -r si.save qq1/
	( cd qq1 ; $(QE_BUILD_DIR)/bin/ph.x < si.ph.in | tee si.ph.out ; rm -rf si.save ; test -f CRASH && exit 1 || echo "OK" )
run_ph2:
	cp -r si.save qq2/
	( cd qq2 ; $(QE_BUILD_DIR)/bin/ph.x < si.ph.in | tee si.ph.out ; rm -rf si.save ; test -f CRASH && exit 1 || echo "OK" )
run_ph3:
	cp -r si.save qq3/
	( cd qq3 ; $(QE_BUILD_DIR)/bin/ph.x < si.ph.in | tee si.ph.out ; rm -rf si.save ; test -f CRASH && exit 1 || echo "OK" )

run_q2r:
	rm -rf CRASH
	cp qq1/si.dyn ./si.dyn1
	cp qq2/si.dyn ./si.dyn2
	cp qq3/si.dyn ./si.dyn3
	$(QE_BUILD_DIR)/bin/q2r.x < q2r.in | tee q2r.out
	( test -f CRASH && exit 1 || echo "OK" )

run_nscf:
	rm -rf si-nscf.save
	cp -r si.save si-nscf.save
	$(MPI_CMD) $(QE_BUILD_DIR)/bin/pw.x < si.nscf.in | tee si.nscf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_nscf_pw2intw:
	${QE_BUILD_DIR}/bin/pw2intw.x < nscf.pw2intw.in | tee nscf.pw2intw.out
	( test -f CRASH && exit 1 || echo "OK" )


SCF_FILES = si.scf.out si.save/data-file-schema.xml si.save/charge-density.dat si.save/wfc8.dat
PH_FILES_Q1 = qq1/si.ph.out qq1/si.dyn qq1/_ph0/si.dvscf1 qq1/_ph0/si.phsave/patterns.1.xml
PH_FILES_Q2 = qq2/si.ph.out qq2/si.dyn qq2/_ph0/si.dvscf1 qq2/_ph0/si.phsave/patterns.1.xml
PH_FILES_Q3 = qq3/si.ph.out qq3/si.dyn qq3/_ph0/si.dvscf1 qq3/_ph0/si.phsave/patterns.1.xml
PH_FILES = $(PH_FILES_Q1) $(PH_FILES_Q2) $(PH_FILES_Q3)
Q2R_FILES = q2r.out si.fc
NSCF_FILES = si.nscf.out si-nscf.save/data-file-schema.xml si-nscf.save/charge-density.dat si-nscf.save/wfc64.dat
NSCF_PW2INTW_FILES = nscf.pw2intw.out si-nscf.save.intw/crystal.dat si-nscf.save.intw/wfc00064.dat


scf_files: $(SCF_FILES)
ph_files: $(PH_FILES)
q2r_files: $(Q2R_FILES)
nscf_files: $(NSCF_FILES)
nscf_pw2intw_files: $(NSCF_PW2INTW_FILES)


si.nscf.out: $(SCF_FILES)
	make run_nscf
si-nscf.save/data-file-schema.xml: $(SCF_FILES)
	make run_nscf
si-nscf.save/charge-density.dat: $(SCF_FILES)
	make run_nscf
si-nscf.save/wfc64.dat: $(SCF_FILES)
	make run_nscf

si.scf.out:
	make run_scf
si.save/data-file-schema.xml:
	make run_scf
si.save/charge-density.dat:
	make run_scf

qq1/si.ph.out: $(SCF_FILES)
	make run_ph1
qq2/si.ph.out: $(SCF_FILES)
	make run_ph2
qq3/si.ph.out: $(SCF_FILES)
	make run_ph3

qq1/si.dyn: $(SCF_FILES)
	make run_ph1
qq2/si.dyn: $(SCF_FILES)
	make run_ph2
qq3/si.dyn: $(SCF_FILES)
	make run_ph3

qq1/_ph0/si.dvscf1: $(SCF_FILES)
	make run_ph1
qq2/_ph0/si.dvscf1: $(SCF_FILES)
	make run_ph2
qq3/_ph0/si.dvscf1: $(SCF_FILES)
	make run_ph3

qq1/_ph0/si.phsave/patterns.1.xml: $(SCF_FILES)
	make run_ph1
qq2/_ph0/si.phsave/patterns.1.xml: $(SCF_FILES)
	make run_ph2
qq3/_ph0/si.phsave/patterns.1.xml: $(SCF_FILES)
	make run_ph3

q2r.out: $(PH_FILES)
	make run_q2r
si.fc: $(PH_FILES)
	make run_q2r

nscf.pw2intw.out: $(NSCF_FILES)
	make run_nscf_pw2intw
si-nscf.save.intw/crystal.dat: $(NSCF_FILES)
	make run_nscf_pw2intw
si-nscf.save.intw/wfc00064.dat: $(NSCF_FILES)
	make run_nscf_pw2intw


clean:
	rm -rf si.scf.out si.xml si.wfc* si.save
	rm -rf qq1/si.dyn qq1/si.ph.out qq1/si.wfc* qq1/_ph0 qq1/si.save
	rm -rf qq2/si.dyn qq2/si.ph.out qq2/si.wfc* qq2/_ph0 qq2/si.save
	rm -rf qq3/si.dyn qq3/si.ph.out qq3/si.wfc* qq3/_ph0 qq3/si.save
	rm -rf q2r.out si.fc si.dyn1 si.dyn2 si.dyn3
	rm -rf si.nscf.out si-nscf.xml si-nscf.wfc* si-nscf.save
	rm -rf nscf.pw2intw.out si-nscf.save.intw
	rm -rf pw2intw.out si.save.intw
	rm -rf intw.out ep_mat.dat_*
