
QE_HOME=@QE_HOME@
QE_VERSION=$(shell basename ${PWD} | sed 's/QE-//')

#MPI_CMD=@MPI_CMD@


all: pw_files ph_files q2r_files pw_nscf_files

calculation: all


.PHONY: all calculation clean run_pw run_ph run_q2r run_pw_nscf pw_files ph_files q2r_files pw_nscf_files

run_pw:
	$(QE_HOME)/build/bin/pw.x < si.scf.in | tee si.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_ph1:
	cp -r si.save qq1/
	( cd qq1 ; $(QE_HOME)/build/bin/ph.x < si.ph.in | tee si.ph.out ; rm -rf si.save ; test -f CRASH && exit 1 || echo "OK" )
run_ph2:
	cp -r si.save qq2/
	( cd qq2 ; $(QE_HOME)/build/bin/ph.x < si.ph.in | tee si.ph.out ; rm -rf si.save ; test -f CRASH && exit 1 || echo "OK" )
run_ph3:
	cp -r si.save qq3/
	( cd qq3 ; $(QE_HOME)/build/bin/ph.x < si.ph.in | tee si.ph.out ; rm -rf si.save ; test -f CRASH && exit 1 || echo "OK" )

run_q2r:
	rm -rf CRASH
	cp qq1/si.dyn ./si.dyn1
	cp qq2/si.dyn ./si.dyn2
	cp qq3/si.dyn ./si.dyn3
	$(QE_HOME)/build/bin/q2r.x < q2r.in | tee q2r.out
	( test -f CRASH && exit 1 || echo "OK" )

run_pw_nscf:
	rm -rf si-nscf.save
	cp -r si.save si-nscf.save
	$(MPI_CMD) $(QE_HOME)/build/bin/pw.x < si.nscf.in | tee si.nscf.out
	./non-deg.bash


PW_FILES = si.scf.out si.save/data-file-schema.xml si.save/charge-density.dat
PH_FILES_Q1 = qq1/si.ph.out qq1/si.dyn qq1/_ph0/si.dvscf1 qq1/_ph0/si.phsave/patterns.1.xml
PH_FILES_Q2 = qq2/si.ph.out qq2/si.dyn qq2/_ph0/si.dvscf1 qq2/_ph0/si.phsave/patterns.1.xml
PH_FILES_Q3 = qq3/si.ph.out qq3/si.dyn qq3/_ph0/si.dvscf1 qq3/_ph0/si.phsave/patterns.1.xml
PH_FILES = $(PH_FILES_Q1) $(PH_FILES_Q2) $(PH_FILES_Q3)
Q2R_FILES = q2r.out si.fc
PW_NSCF_FILES = si.nscf.out si-nscf.save/data-file-schema.xml si-nscf.save/charge-density.dat si-nscf.save/wfc64.dat non_deg_file


pw_files: $(PW_FILES)
ph_files: $(PH_FILES)
q2r_files: $(Q2R_FILES)
pw_nscf_files: $(PW_NSCF_FILES)


si.nscf.out: $(PW_FILES)
	make run_pw_nscf
si-nscf.save/data-file-schema.xml: $(PW_FILES)
	make run_pw_nscf
si-nscf.save/charge-density.dat: $(PW_FILES)
	make run_pw_nscf
si-nscf.save/wfc64.dat: $(PW_FILES)
	make run_pw_nscf
non_deg_file: $(PW_FILES)
	make run_pw_nscf


si.scf.out:
	make run_pw
si.save/data-file-schema.xml:
	make run_pw
si.save/charge-density.dat:
	make run_pw

qq1/si.ph.out: $(PW_FILES)
	make run_ph1
qq2/si.ph.out: $(PW_FILES)
	make run_ph2
qq3/si.ph.out: $(PW_FILES)
	make run_ph3

qq1/si.dyn: $(PW_FILES)
	make run_ph1
qq2/si.dyn: $(PW_FILES)
	make run_ph2
qq3/si.dyn: $(PW_FILES)
	make run_ph3

qq1/_ph0/si.dvscf1: $(PW_FILES)
	make run_ph1
qq2/_ph0/si.dvscf1: $(PW_FILES)
	make run_ph2
qq3/_ph0/si.dvscf1: $(PW_FILES)
	make run_ph3

qq1/_ph0/si.phsave/patterns.1.xml: $(PW_FILES)
	make run_ph1
qq2/_ph0/si.phsave/patterns.1.xml: $(PW_FILES)
	make run_ph2
qq3/_ph0/si.phsave/patterns.1.xml: $(PW_FILES)
	make run_ph3

q2r.out: $(PH_FILES)
	make run_q2r
si.fc: $(PH_FILES)
	make run_q2r


clean:
	rm -rf si.scf.out si.xml si.wfc* si.save
	rm -rf si.nscf.out si-nscf.xml si-nscf.wfc* si-nscf.save non_deg_file
	rm -rf qq1/si.dyn qq1/si.ph.out qq1/si.wfc* qq1/_ph0 qq1/si.save
	rm -rf qq2/si.dyn qq2/si.ph.out qq2/si.wfc* qq2/_ph0 qq2/si.save
	rm -rf qq3/si.dyn qq3/si.ph.out qq3/si.wfc* qq3/_ph0 qq3/si.save
	rm -rf q2r.out si.fc si.dyn1 si.dyn2 si.dyn3
	rm -rf pw2intw.out si.save.intw
	rm -rf intw.out ep_mat.dat_*
