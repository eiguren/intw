
QE_HOME=@QE_HOME@
QE_VERSION=$(shell basename ${PWD} | sed 's/QE-//')

#MPI_CMD=@MPI_CMD@


all: scf_files ph_files q2r_files nscf_files

calculation: all


.PHONY: all calculation clean run_scf run_ph run_q2r run_nscf scf_files ph_files q2r_files nscf_files


run_scf:
	$(QE_HOME)/build/bin/pw.x < cu.scf.in | tee cu.scf.out
	( test -f CRASH && exit 1 || echo "OK" )

run_ph1:
	cp -r cu.save qq1/
	( cd qq1 ; $(QE_HOME)/build/bin/ph.x < cu.ph.in | tee cu.ph.out ; rm -rf cu.save ; test -f CRASH && exit 1 || echo "OK" )
run_ph2:
	cp -r cu.save qq2/
	( cd qq2 ; $(QE_HOME)/build/bin/ph.x < cu.ph.in | tee cu.ph.out ; rm -rf cu.save ; test -f CRASH && exit 1 || echo "OK" )
run_ph3:
	cp -r cu.save qq3/
	( cd qq3 ; $(QE_HOME)/build/bin/ph.x < cu.ph.in | tee cu.ph.out ; rm -rf cu.save ; test -f CRASH && exit 1 || echo "OK" )

run_q2r:
	rm -rf CRASH
	cp qq1/cu.dyn ./cu.dyn1
	cp qq2/cu.dyn ./cu.dyn2
	cp qq3/cu.dyn ./cu.dyn3
	$(QE_HOME)/build/bin/q2r.x < q2r.in | tee q2r.out
	( test -f CRASH && exit 1 || echo "OK" )


run_nscf:
	rm -rf cu-nscf.save
	cp -r cu.save cu-nscf.save
	$(MPI_CMD) $(QE_HOME)/build/bin/pw.x < cu.nscf.in | tee cu.nscf.out
	./non-deg.bash



SCF_FILES = cu.scf.out cu.save/data-file-schema.xml cu.save/charge-density.dat cu.save/wfc8.dat
PH_FILES_Q1 = qq1/cu.ph.out qq1/cu.dyn qq1/_ph0/cu.dvscf1 qq1/_ph0/cu.phsave/patterns.1.xml
PH_FILES_Q2 = qq2/cu.ph.out qq2/cu.dyn qq2/_ph0/cu.dvscf1 qq2/_ph0/cu.phsave/patterns.1.xml
PH_FILES_Q3 = qq3/cu.ph.out qq3/cu.dyn qq3/_ph0/cu.dvscf1 qq3/_ph0/cu.phsave/patterns.1.xml
PH_FILES = $(PH_FILES_Q1) $(PH_FILES_Q2) $(PH_FILES_Q3)
Q2R_FILES = q2r.out cu.fc
NSCF_FILES = cu.nscf.out cu-nscf.save/data-file-schema.xml cu-nscf.save/charge-density.dat cu-nscf.save/wfc64.dat non_deg_file


scf_files: $(SCF_FILES)
ph_files: $(PH_FILES)
q2r_files: $(Q2R_FILES)
nscf_files: $(NSCF_FILES)

cu.scf.out:
	make run_scf
cu.save/data-file-schema.xml:
	make run_scf
cu.save/charge-density.dat:
	make run_scf
cu.save/wfc8.dat:
	make run_scf

qq1/cu.ph.out: $(SCF_FILES)
	make run_ph1
qq2/cu.ph.out: $(SCF_FILES)
	make run_ph2
qq3/cu.ph.out: $(SCF_FILES)
	make run_ph3

qq1/cu.dyn: $(SCF_FILES)
	make run_ph1
qq2/cu.dyn: $(SCF_FILES)
	make run_ph2
qq3/cu.dyn: $(SCF_FILES)
	make run_ph3

qq1/_ph0/cu.dvscf1: $(SCF_FILES)
	make run_ph1
qq2/_ph0/cu.dvscf1: $(SCF_FILES)
	make run_ph2
qq3/_ph0/cu.dvscf1: $(SCF_FILES)
	make run_ph3

qq1/_ph0/cu.phsave/patterns.1.xml: $(SCF_FILES)
	make run_ph1
qq2/_ph0/cu.phsave/patterns.1.xml: $(SCF_FILES)
	make run_ph2
qq3/_ph0/cu.phsave/patterns.1.xml: $(SCF_FILES)
	make run_ph3

q2r.out: $(PH_FILES)
	make run_q2r
cu.fc: $(PH_FILES)
	make run_q2r

cu.nscf.out: $(SCF_FILES)
	make run_nscf
cu-nscf.save/data-file-schema.xml: $(SCF_FILES)
	make run_nscf
cu-nscf.save/charge-density.dat: $(SCF_FILES)
	make run_nscf
cu-nscf.save/wfc64.dat: $(SCF_FILES)
	make run_nscf
non_deg_file: $(SCF_FILES)
	make run_nscf


clean:
	rm -rf cu.scf.out cu.xml cu.wfc* cu.save
	rm -rf qq1/cu.dyn qq1/cu.ph.out qq1/cu.wfc* qq1/_ph0 qq1/cu.save
	rm -rf qq2/cu.dyn qq2/cu.ph.out qq2/cu.wfc* qq2/_ph0 qq1/cu.save
	rm -rf qq3/cu.dyn qq3/cu.ph.out qq3/cu.wfc* qq3/_ph0 qq1/cu.save
	rm -rf q2r.out cu.fc cu.dyn1 cu.dyn2 cu.dyn3
	rm -rf pw2intw.out cu.save.intw
	rm -rf intw.out ep_mat.dat_1
	rm -rf cu-nscf.save non_deg_file
